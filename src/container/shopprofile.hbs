<h1 class='mt-5 mb-4'>{{header}}</h1>

{{#with purchase}}
  <div class='nav nav-tabs'>
    {{#each tabs}}
      <div class='nav-item'>
        {{#if @first}}
          <a class='nav-link active'><b>{{this}}</b></a>
        {{else}}
          <a class='nav-link'>{{this}}</a>
        {{/if}}
      </div>
    {{/each}}
  </div>

  {{#with actionBlock}}
    <div class='row'>

      <div class='col-4 mt-4'>
        <div class='form'>
          {{#with input}}
            <input
              placeholder='{{placeholder}}'
              class='form-control'
            />
          {{/with}}
        </div>
      </div>

      <div class='col-7 mt-4'>
        {{#each buttons}}
          {{#if isSuccess}}
            <a
              href='{{link}}'
              class='btn btn-success'
            >{{text}}</a>
          {{/if}}
          {{#if isOutline}}
            <a
              href='{{link}}'
              class='btn btn-outline-success mx-2'
            >{{text}}</a>
          {{/if}}
          {{#if isDanger}}
            <a
              href='{{link}}'
              class='btn btn-outline-danger'
            >{{text}}</a>
          {{/if}}
        {{/each}}
      </div>
    </div>
  {{/with}}

  <hr class='mt-4' />

 {{#each itemList}}
    {{> purchaseItem}}
 {{/each}}


{{/with}}

<hr class='mt-4' />

{{#with userInfo}}
  <h1 class='mt-5 mb-5'>{{title}}</h1>
  {{#with profileData}}
    <div class='card mb-2'>
      <div class='card-title m-2'><h2>{{title}}</h2></div>
      {{#with fullName}}

        <div class='row'>

          {{#with surname}}
            <div class='col-3 m-1'>
              {{title}}
              <br />
              <b>{{value}}</b>
            </div>
          {{/with}}

          {{#with name}}
            <div class='col-3 mx-5'>
              {{title}}
              <br />
              <b>{{value}}</b>
            </div>
          {{/with}}

          {{#with middleName}}
            <div class='col-3 mx-4'>
              {{title}}
              <br />
              <b>{{value}}</b>
            </div>
          {{/with}}

        </div>

      {{/with}}

      {{#with otherInfo}}

        <div class='row mb-2'>

          {{#with birthday}}
            <div class='col-3 m-1'>
              {{title}}
              <br />
              <b>{{value}}</b>
            </div>
          {{/with}}

          {{#with sex}}
            <div class='col-3 mx-5'>
              {{title}}
              <br />
              <b>{{value}}</b>
            </div>
          {{/with}}

          {{#with language}}
            <div class='col-3 mx-4'>
              {{title}}
              <br />
              <b>{{value}}</b>
            </div>
          {{/with}}

        </div>

      {{/with}}

      <div class='row mb-2'>
        {{#each ../buttons}}
          <div class='col-4'>
            {{#if isPrimary}}
              <a
                href='{{link}}'
                class='btn btn-primary'
              >{{text}}</a>
            {{/if}}
            {{#if isSecondary}}
              <a
                href='{{link}}'
                class='btn btn-outline-secondary'
              >{{text}}</a>
            {{/if}}
            {{#if isDanger}}
              <a
                href='{{link}}'
                class='btn btn-outline-danger'
              >{{text}}</a>
            {{/if}}
          </div>
        {{/each}}
      </div>
    </div>
  {{/with}}

  
  {{#with recipients}}
      <div class="card">
        <div class="card-title m-2 mb-4"><h2>{{title}}</h2></div>

        <div class="row">
           {{#each users}}
            <div class="col-4 m-2">
              <b>{{name}}</b>
              {{phone}}
              <br>
              <br>
              {{#with button}}
                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
              {{/with}}
            </div>
            {{/each}}

        </div>
         
      </div>
  {{/with}}

  {{#with contacts}}
    <div class="card mb-5 mt-2">
        <div class="card-title m-2"><h2>{{title}}</h2></div>

        <div class="row mb-4">
           {{#with contactData}}
            
            <div class="col-4">
               {{#with phone}}
                 {{title}} 
                 <br>
                 <b>{{value}}</b>
               {{/with}}
            </div>

            <div class="col-4">
               {{#with additionalPhone}}
                 {{title}} 
                 <br>
                 <b>{{value}}</b>
               {{/with}}
            </div>

            <div class="col-4">
               {{#with email}}
                 {{title}} 
                 <br>
                 <b>{{value}}</b>
               {{/with}}
            </div>
          
          {{/with}}
        </div>
        
        <div class="row mb-2">
           {{#each buttons}}
            <div class="col-4">
                {{#if isPrimary}}
                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                {{/if}}
                {{#if isSecondary}}
                <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                {{/if}}
                {{#if isDanger}}
                <a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
  {{/with}}

{{/with}}

<hr>



