{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
  <main>

    <div class="card">

      <div class="card-header">
        {{> title data="All skills" big=true}}
      </div>
    

    <div class="card-body">
    <section>
      <ul>
        {{#each skills}}
        <li>
          {{name}}
          {{#if point includeZero=true}} ({{point}}) {{/if}}
          {{#if isTop}} (TOP) {{/if}}
          {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
          {{#unless point}} 
          {{#if point includeZero=true}}
           (зараз вивчаємо)
          {{/if}}
          {{/unless}}
        </li>
        {{/each}}
      </ul>
    </section>
    </div>

    </div>


    <div class="card mt-2">
      <div class="card-header">
       {{> title data="My hobbies" big=false}}
      </div>
      <div class="card-body">
       <section>
        <ol>
        {{#each hobbies}}
          <li>
           {{name}}
           
           {{#if isMain includeZero=true}} (Favourite) {{/if}}
           
          </li>
        {{/each}}
        </ol>
       </section>
      </div>

    </div>

  </main>
  {{/with}}

</div>

