      <ol>


    <div class="card mt-2">
      <div class="card-header">
       {{> title data="My hobbies" big=false}}
      </div>
      <div class="card-body">
       <section>
        <ol>

        {{#each hobbies}}
          <li>
           {{name}}
           {{#if isMain includeZero=true}} (Favourite) {{/if}} 
