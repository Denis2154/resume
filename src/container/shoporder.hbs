<div class='row'>
 
  <h3 class='ms-1 mb-3'>{{header}}</h3>
 
 {{#with contacts_data}}
     <h4 class="mt-3">{{title}}</h4>
    {{#each buttons}}
    
      {{#if isPrimary}}
      <div class="col-4 mt-5">
        <button
          class='btn btn-warning'
        >{{text}}</button>
      </div>
      {{/if}}
      {{#if isOutline}}
      <div class="col-4 px-1 ps-1 mt-5">
        <button
          class='btn btn-outline-warning'
        >{{text}}</button>
      </div>
      {{/if}}
    {{/each}}

    <div class="col-4">
    <div class='card'>
      {{#each ../action_block}}
        {{#if isPrimary}}
          <button class='btn btn-success'>{{text}}</button>
        {{/if}}
        {{#if isDanger}}
          <button class='btn btn-danger'>{{text}}</button>
        {{/if}}
        {{#if isInfo}}
          <button class='btn btn-info'>{{text}}</button>
        {{/if}}
      {{/each}}
    </div>
    </div>

</div> 
  
<div class="row">
  
    {{#with form}}
      {{#with input}}
      
        {{#with surname}}
        <div class="col-4">
          <label class='form-label'>{{label}}</label>
          <input
            placeholder='{{placeholder}}'
            class='form-control'
          />
          <div class='form-text'>{{caption}}</div>

          {{#with ../phone}} 
          <label class='form-label'>{{label}}</label>
          <input
            placeholder='{{placeholder}}'
            class='form-control'
          />
          <div class='form-text'>{{caption}}</div>   
        {{/with}}
        <hr>
        {{#each ../../switch}}
          <div class="form-check form-switch">
            <input type="checkbox" class="form-check-input" {{#if isActive}}checked{{/if}}>{{text}}
          </div>
         {{/each}}
         <hr>

         {{#with ../../../../delivery}}
       <h4>{{title}}</h4>
       <div class="card">
        <div class="row">
            {{#each select}} 
            <div class="">
              <div class="form-select">
                <input type="checkbox">  
              </div>
              </div>       
              {{/each}}     
              </div>
              </div>  
          {{/with}}
 
      </div>
      {{/with}}


        {{#with name}}
        <div class="col-4">
          <label class='form-label'>{{label}}</label>
          <input
            placeholder='{{placeholder}}'
            class='form-control'
          />
          <div class='form-text'>{{caption}}</div>
          
          {{#with ../email}}
        
          <label class='form-label'>{{label}}</label>
          <input
            placeholder='{{placeholder}}'
            class='form-control'
          />
          <div class='form-text'>{{caption}}</div>
        {{/with}}
          <hr>
          <br>
          <br>
          <br>
          <br>
          <hr>
          </div>
        {{/with}}

  
        {{#with ../../../total}}
        <div class="col-4 mt-1">
        <div class="card">
          <h4>{{title}}</h4>
          <ul class="p-1">
          {{#each item_list}}
            <div class="list-group-item">{{name}} : {{price}}</div>
          {{/each}}
          <hr>
          {{#each additional_info}}
            <div class="list-group-item">{{text}} : {{value}}</div> 
          {{/each}}
          <hr>
          {{#with total_price}}
          <div>{{text}} : {{value}}</div>
          {{/with}}
          <hr>
          {{#each button}}
          {{#if isPrimary}}
             <button class="btn btn-primary">{{text}}</button>
          {{/if}}
          {{#if isOutline}}
             <button class="btn btn-outline-primary mt-2">{{text}}</button>
          {{/if}}
          {{/each}}
          </ul>
        </div>
        </div>
        {{/with}}      
</div> 
{{/with}}
{{/with}}
{{/with}}  


  
    {{#with delivery}}
       <h4>{{title}}</h4>
       <div class="card">
        <div class="row">
            {{#each select}} 
            <div class="col-4">
              <div class="form-select">
                <input type="checkbox">  
              </div>
              </div>       
              {{/each}}     
              </div>
              </div>  
    {{/with}}
   
  







