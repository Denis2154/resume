<div class='col-4'>
  <div class='card ms-1'>
    <img src='{{image}}' class='card-img-top' />
    <div class='card-body'>
      <div class='card-title'>
        <b>{{title}}</b>
        {{#if isHot}}
          <span
            class='bange text-bg-warning rounded-pill'
          >HOT!</span>
          {{#if idNew}}
            <span
              class='bange text-bg-primary rounded-pill'
            >Нове</span>
          {{/if}}
        {{else}}
          {{#if idNew}}
            <span
              class='bange text-bg-primary rounded-pill'
            >Нове</span>
            {{#if isHot}}
              <span
                class='bange text-bg-warning rounded-pill'
              >HOT!</span>
            {{/if}}
          {{/if}}
        {{/if}}
      </div>
      <p>{{description}}</p>
    </div>
  </div>
</div>