<div class='card mt-4'>
  <div class='row'>
    <img class='col-2 m-2' src='{{image}}' />

    <div class='col-4 mt-3'>
      <b>{{name}}</b>
      <p class='pt-3'>{{description}}</p>
    </div>

    <div class='col-2 text-center mt-5'>
      {{#with price}}
        {{title}}
        :
        <br />
        {{value}}
      {{/with}}
    </div>

    <div class='col-1 mt-5'>
      {{amount}}
    </div>

    <div class='col-2 mt-3 me-1'>
      {{#each buttons}}
        {{#if isPrimary}}
          <button
            class='btn btn-primary mt-3'
          >{{text}}</button>
        {{/if}}
        {{#if isDanger}}
          <button
            class='btn btn-outline-danger mt-3'
          >{{text}}</button>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>